@model DMP.ModelsView.ProfileViewModel
@using DMP.Utils
@{
    ViewBag.Title = "Profile";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<script type="text/javascript">
    $(document).ready(function () {
        var url = '/Dealer/ManpowerProfile?id=' + @Model.Manpower.Id + '&dealerId='+@Model.Manpower.DealerId;
        $('#linkEdit').attr('href', url);
    });
</script>
<div class="row-fluid">
    <div class="span12">
        <div class="span6" id="dvProfile">
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th colspan="3" class="head1">
                            Personal Information
                        </th>
                        <th class="head1">
                            <a href="#" id="linkEdit" style="float: right" class="edit" title="click here to edit profile">
                            </a>
                        </th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td class="label1">
                            Contact Number
                        </td>
                        <td class="label2">@Model.Manpower.ContactNumber
                        </td>
                        <td class="label1">
                            Date Of Birth
                        </td>
                        <td class="label2">@Model.Manpower.DOBString
                        </td>
                    </tr>
                    <tr>
                        <td class="label1">
                            Address
                        </td>
                        <td class="label2">@Model.Manpower.Address
                        </td>
                        <td class="label1">
                            Designation
                        </td>
                        <td class="label2">@Model.Manpower.Designation
                        </td>
                    </tr>
                    <tr>
                        <td class="label1">
                            Email
                        </td>
                        <td class="label2">@Model.Manpower.Email
                        </td>
                        <td class="label1">
                            PAN
                        </td>
                        <td class="label2">@Model.Manpower.PANNumber
                        </td>
                    </tr>
                    <tr>
                        <td class="label1">
                            Date Of Joining
                        </td>
                        <td class="label2">@Model.Manpower.DOJString
                        </td>
                        <td class="label1">
                            Date Of Leaving
                        </td>
                        <td class="label2">@Model.Manpower.DOLString
                        </td>
                    </tr>
                    <tr>
                        <td class="label1">
                            Previous Company
                        </td>
                        <td class="label2">@Model.Manpower.PreviousCompany
                        </td>
                        <td class="label1">
                            Previous Job Profile
                        </td>
                        <td class="label2">@Model.Manpower.PreviousJobProfile
                        </td>
                    </tr>
                    <tr>
                        <td class="label1">
                            Total Work Experience
                        </td>
                        <td class="label2">@Model.Manpower.TotalWorkExperience
                        </td>
                        <td class="label1">
                            Experience With VE
                        </td>
                        <td class="label2">@Model.Manpower.ExperienceWithVE
                        </td>
                    </tr>
                    <tr>
                        <td class="label1">
                            Segment Serving
                        </td>
                        <td class="label2">@Model.Manpower.Product
                        </td>
                        <td class="label1">
                            TIV Representing
                        </td>
                        <td class="label2">@Model.Manpower.TIVRepresenting
                        </td>
                    </tr>
                    <tr>
                        <td class="label1">
                            Training Level
                        </td>
                        <td class="label2">@Model.Manpower.TrainingLevel
                        </td>
                        <td class="label1">
                            SAP Code
                        </td>
                        <td class="label2">@Model.Manpower.SAPId
                        </td>
                    </tr>
                    <tr>
                        <td class="label1">
                            Salary
                        </td>
                        <td class="label2">@Model.Manpower.Salary
                        </td>
                        <td class="label1">
                        </td>
                        <td class="label2">
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
        <div class="span3">
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th class="head1">
                            Competency
                        </th>
                    </tr>
                    <tr>
                        <th>@Model.Manpower.Competency
                        </th>
                    </tr>
                </thead>
            </table>
        </div>
        <div class="span3">
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th class="head1">
                            Productivity
                        </th>
                    </tr>
                    <tr>
                        <th>
                            20
                        </th>
                    </tr>
                </thead>
            </table>
        </div>
        <div class="span6">
            @Html.Action("MonthWisePlanAndActual", "Reporting")
        </div>
    </div>
</div>
<div class="row-fluid">
    <div class="span12">
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th class="head1" colspan="14">
                        Month Wise Target Vs Actual
                    </th>
                </tr>
                <tr>
                    <th class="head2">
                    </th>
                    @foreach (var month in Model.Months) {
                        <th class="head2">
                            @month
                        </th>
                    }
                    <th class="head2">
                        YTD
                    </th>
                </tr>
                <tr>
                    <th class="head3">
                    </th>
                    @foreach (var month in Model.Months) {
                        <th class="head3">
                            T1 | T2 | Act
                        </th>
                    }
                    <th class="head3">
                        T1 | T2 | Act
                    </th>
                </tr>
            </thead>
            <tbody>
                @for (var i = 0; i < 5; i++) {
                    <tr>
                        <td>
                            H1-H2
                        </td>
                        @for (var j = 0; j < 13; j++) {
                            <td>
                                10 | 5 | 10
                            </td>
                        }
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
<div class="row-fluid">
    <div class="span6">
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th colspan="4" class="head1">
                        Training
                    </th>
                </tr>
                <tr>
                    <th class="head2">
                        Training
                    </th>
                    <th class="head2">
                        Total Trainings
                    </th>
                    <th class="head2">
                        Last Attended
                    </th>
                    <th class="head2">
                        Days
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var training in Model.Trainings) {
                    <tr>
                        <td>@training.Training
                        </td>
                        <td>@training.NumberOfTrainings
                        </td>
                        <td>@training.TDString
                        </td>
                        <td>@training.NumberOfDays
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
